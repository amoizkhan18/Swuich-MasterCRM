@model TICRM.DAL.ReadingUnit
<style>
    table.tb-horizontal {
        width: 100%;
    }

    td.blockquote {
        width: 60%;
        padding-bottom: 10px;
    }

    th.blockquote {
        width: 40%;
        padding-bottom: 10px;
    }
</style>
<div class="modal-header modal-header-rightside">
    <blockquote class="blockquote">
        @*<h3 class="modal-header-title" id="exampleModalLabel" style="text-transform: uppercase; text-align:center; margin-top:20px; justify-content:center">OPPERTUNITY DETAILS</h3>*@
        <h5 class="modal-header-title" id="exampleModalLabel">READING UNITS DETAILS</h5>
        <button type="button" class="close modalrightsideClose" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">X</span>
        </button>
    </blockquote>
</div>
<div class="modal-body">
    <div class="tab-content">
        <div class="tab-pane active show" id="m_portlet_tab_ReadingUnits" role="tabpanel">

            <div class="row container">
                <table class="tb-horizontal">
                    <tr>
                        <th class="blockquote"> Reading Type</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Name)</td>
                    </tr>
                </table>
            </div>
        </div>

    </div>
</div>
<div class="modal-footer modal-rightside-footer">
    <a href="@Url.Action("Edit", "ReadingUnits" , new { id=Model.ReadingUnitId })" class="btn btn-primary m-btn m-btn--custom m-btn--icon m-btn--air"><i class="fa fa-pencil-alt"></i> &nbsp; Edit</a>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

</div>





